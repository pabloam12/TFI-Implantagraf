@model IEnumerable<Entidades.Categoria>

@{
    ViewBag.Title = "Categoria";
    
}

@Html.Partial("_Espacio1")

<h2>Categorias</h2>
<br />

<p>
    @Html.ActionLink("Nueva Categoria", "Crear", null, new { @class = "btn btn-primary btn-sm" })
</p>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Borrar", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div class="row">
    @Html.ActionLink("Volver", "Index", "Home")
</div>

@Html.Partial("_Espacio2")
