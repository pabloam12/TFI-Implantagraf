                </div>
            </div>

            <div class="row">


                <div class="col">
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @ViewBag.ENTIDAD_TELEFONO
                        <div class="col">
                            @if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                            {
