@model Entidades.FrmRegistroCliente

@{
    ViewBag.Title = ViewBag.REGISTRO_CLIENTE_TITULO;
}

@Html.Partial("_Espacio1")

<body>

    <div class="container contact_container">

        <h4>@ViewBag.REGISTRO_CLIENTE_TITULO</h4>
        <br />

        @using (Html.BeginForm())
        {
            <div class="row">

                <div class="col">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.RazonSocial, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @ViewBag.ENTIDAD_RAZON_SOCIAL
                        <div class="col">
                            @if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                            {
                                @Html.EditorFor(model => model.RazonSocial, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RazonSocial, "", new { @class = "text-danger" })}
                            else
                            {
                                @Html.EditorFor(model => model.RazonSocial_Eng, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RazonSocial_Eng, "", new { @class = "text-danger" })}
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @ViewBag.ENTIDAD_USUARIO_MAIL
