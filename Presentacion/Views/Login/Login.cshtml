@model Entidades.FrmLogin

@Html.Partial("_Espacio1")

<body>

    <div class="container contact_container">

        <div class="row">

            <div class="col-lg-9 contact_col">
                <div class="contact_contents">

                    @using (Html.BeginForm("Login", "Login"))
                    {

                        <h4>@ViewBag.LOGIN_TITULO_TENGO_CUENTA</h4>
                        <hr />

                        <div class="form-group">
                            @ViewBag.ENTIDAD_USUARIO
                            <div class="col-md-10">
                                @if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                {@Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger text-right" })}

                                @if ((String)Session["IdiomaApp"] == "Eng")
                                {@Html.EditorFor(model => model.Usuario_Eng, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Usuario_Eng, "", new { @class = "text-danger text-right" })}
                                
                            </div>
                        </div>

                        <div class="form-group">

                            @ViewBag.ENTIDAD_PSW
                            <div class="col-md-10">


                                @if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                {@Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger text-right" })}

                                @if ((String)Session["IdiomaApp"] == "Eng")
                                {@Html.EditorFor(model => model.Contraseña_Eng, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Contraseña_Eng, "", new { @class = "text-danger text-right" })}

                            </div>

                        </div>
                            <div class="form-group">
                                <div class="col-md-10 col-md-offset-1">
@if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
{
                                    <input type="submit" value="INICIAR SESIÓN" class="btn btn-success btn-sm" />
}
else
{ <input type="submit" value="LOGIN" class="btn btn-success btn-sm" />}
                                    @Html.ActionLink((String)ViewBag.LOGIN_OLVIDO_PSW, "RecuperarPsw", "Cuenta")
                                </div>

                                @if ((String)Session["ErrorLogin"] != null)
                                {<br />
                                <div class="alert alert-danger" role="alert">@Session["ErrorLogin"]!</div>
                                }


                            </div>



                    }

                </div>
            </div>

            <div class="col-lg-3 contact_col">
                <div class="contact_contents">

                    <h4>@ViewBag.LOGIN_TITULO_USUARIO_NUEVO</h4>
                    <hr />

                    <p><a href="~/RegistroCliente/Index" class="btn btn-lg btn-success" role="button">@ViewBag.BOTON_REGISTRAR</a></p>

                </div>
            </div>

        </div>
    </div>
</body>

@Html.Partial("_Espacio2")


@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

}


