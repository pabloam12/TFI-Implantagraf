@model Entidades.Usuario

@{
    ViewBag.Title = "Login";
}

<h2>Inicio de Sesión</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="col-md-9">
            <h4>TENGO UNA CUENTA</h4>
            <hr />
            <div class="col-md-6">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Usr, htmlAttributes: new { @class = "control-label col-md-2" })
                    
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Usr, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Usr, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Psw, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Psw, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Psw, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                    <div class="align-self-center col-md-10">
                        <input type="submit" value="Iniciar Sesión" class="btn btn-success" />
                        @Html.ActionLink("¿Olvidó cuál es su Contraseña?", "OlvidoPsw", "Cuenta")
                    </div>
                </div>*@
            </div>

            <div class="col-md-4">

                @if (Session["ErrorLogin"] != null)
                {
                    <div class="alert alert-danger" role="alert">@Session["ErrorLogin"]!</div>
                }
            </div>
        </div>



        <div class="col-md-3">
            <h4>SOY USUARIO NUEVO</h4>
            <hr />
            
            <p><a href="~/RegistroCliente/Index" class="btn btn-lg btn-success" role="button">Registrarse</a></p>

        </div>


        <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
                <input type="submit" value="Iniciar Sesión" class="btn btn-success btn-sm" />
                @Html.ActionLink("¿Olvidó su Contraseña?", "OlvidoPsw", "Cuenta")
            </div>
        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


