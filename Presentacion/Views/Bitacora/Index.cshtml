@model IEnumerable<Entidades.Bitacora>

@{
    ViewBag.Title = "Bitácora del Sistema";

}

@Html.Partial("_Espacio1")

<h2>Bitácora del Sistema</h2>
<br />
<div class="navbar navbar-default">

    <div class="container-fluid">

        <div class="navbar-header">

            <a href="#" class="navbar-brand"> FILTROS DE BÚSQUEDA </a>

        </div>
        <div class="collapse navbar-collapse">

            @using (Html.BeginForm("Index", "Bitacora", FormMethod.Post, new { @class = "navbar-form navbar-left" }))
            {
                <div class="form-group">
                    <input type="text" name="fecha" class="form-control" placeholder="Filtrar Fecha" />
                </div>

                <div class="form-group">
                    <input type="text" name="fechaFin" class="form-control" placeholder="Filtrar Rango de Fecha" />
                </div>

                <div class="form-group">

                    <input type="text" name="usr" class="form-control" placeholder="Filtrar Usuario" />
                </div>
                <div class="form-group">
                    <input type="text" name="accion" class="form-control" placeholder="Filtrar Accion" />
                </div>
                <div class="form-group">
                    <input type="text" name="criticidad" class="form-control" placeholder="Filtrar Criticidad" />
                </div>
                <hr />
                <div class="form-group">
                    <p><button type="submit" value="Search" class="btn btn-lg btn-success"  >Filtrar</button></p>
                </div>
            }
        </div>

    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaHora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Criticidad)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Criticidad)
            </td>


        </tr>
    }

</table>

@Html.Partial("_Espacio2")