@model Entidades.OlvidoPsw

@{
    ViewBag.Title = Presentacion.Recursos.Recursos.CUENTA_RECUPERAR_PSW_TITULO;

}

<h2>@ViewBag.Title.</h2>


@Html.Partial("_Espacio1")

@using (Html.BeginForm("OlvidoClave", "Cuenta", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Especifique su correo electrónico.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Correo, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Recuperar" class="btn btn-success" />
        </div>
    </div>
}

@Html.Partial("_Espacio2")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




