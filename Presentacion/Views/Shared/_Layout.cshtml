<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
        
    
    <link rel="stylesheet" type="text/css" href="~/ColoShop/styles/bootstrap4/bootstrap.min.css">
    <link href="~/ColoShop/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/styles/responsive.css">
</head>



<body>
    <div class="super_container">
        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            @if (Session["PerfilUsuario"] != null)
                            {<div class="top_nav_left">Hola @Session["PerfilUsuario"]!</div>}
                            else
                            {<div class="top_nav_left">Bienvenido a nuestro sitio!</div>}
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">
                                                                     
                                    <li class="language">
                                        <a href="#">
                                            Idioma
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="language_selection">
                                            <li><a href="#">Español</a></li>
                                            <li><a href="#">English</a></li>
                                        </ul>
                                    </li>
                                    <li class="account">
                                        <a href="#">
                                            Cuenta
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="account_selection">

                                            @if (Session["PerfilUsuario"] == null)

                                            {
                                                <li>@Html.ActionLink("LogIn", "Index", "Login")</li>}
                                            else
                                            {
                                                <li> @Html.ActionLink("Info", "DetalleCuenta", "Cuenta") </li>
                                                <li> @Html.ActionLink("Logout", "Index", "Logout") </li>}
                                            @*<li><a href="#"><i class="fa fa-user-plus" aria-hidden="true"></i></a></li>*@
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a href="~/Home/Index">implantagraf<span>@*graf*@</span></a>
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">

                                    @if ((String)Session["PerfilUsuario"] == null || (String)Session["PerfilUsuario"] == "Cliente")
                                    {
                                        <li><a href="~/Home/Index">página principal</a></li>
                                        <li><a href="~/Producto/Catalogo">catálogo</a></li>
                                        <li><a href="#">quienes somos</a></li>
                                        <li><a href="~/Home/Contacto">Contacto</a></li>
                                    }
                                    @if ((String)Session["PerfilUsuario"] == "Administrativo")
                                    {
                                        <li><a href="~/Home/Index">Ventas</a></li>
                                        <li><a href="#">Alquileres</a></li>
                                        
                                     }

                                    @if ((String)Session["PerfilUsuario"] == "WebMaster")
                                    {
                                        <li><a href="~/Bitacora/Index">Consultar Bitácora</a></li>
                                        <li><a href="#">Usuarios</a></li>
                                        <li><a href="#">Objetos de Negocio</a></li>
                                    }

                                </ul>

                                @if(Session["Carrito"]==null)
                                { Session["ItemsCarrito"] = 0; }

                                @if ((String)Session["PerfilUsuario"] == null)
                                {
                                    <ul class="navbar_user">
                                        @*<li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>*@
                                        @*<li><a href="#"><i class="fa fa-user" aria-hidden="true"></i></a></li>*@
                                        <li class="checkout">
                                            <a href="~/Login/Index">
                                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                                <span id="checkout_items" class="checkout_items">@Session["ItemsCarrito"]</span>
                                            </a>
                                        </li>
                                    </ul>
                                }

                                @if ((String)Session["PerfilUsuario"] != null)
                                {
                                    <ul class="navbar_user">
                                        @*<li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>*@
                                        @*<li><a href="#"><i class="fa fa-user" aria-hidden="true"></i></a></li>*@
                                        <li class="checkout">
                                            <a href="~/Producto/MostrarCarrito">
                                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                                <span id="checkout_items" class="checkout_items">@Session["ItemsCarrito"]</span>
                                            </a>
                                        </li>
                                    </ul>
                                }

                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>
        @RenderBody()
        <div class="container body-content">

            <hr />
            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                                <ul class="footer_nav">
                                    @*<li><a href="#">Blog</a></li>
                                    <li><a href="#">FAQs</a></li>
                                    <li><a href="contact.html">Contact us</a></li>*@
                                    <li><div class="cr">©2018 - Pablo Mahiques - Trabajo Final de Ingeniería.</div></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    @*<div class="row">
                        <div class="col-lg-12">
                            <div class="footer_nav_container">
                                <div class="cr">©2018 - Pablo Mahiques - Trabajo Final de Ingeniería.</div>
                            </div>
                        </div>
                    </div>*@
                </div>
            </footer>
        </div>


    </div>

    
    <script src="~/ColoShop/js/jquery-3.2.1.min.js"></script>
    <script src="~/ColoShop/styles/bootstrap4/popper.js"></script>
    <script src="~/ColoShop/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/ColoShop/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/ColoShop/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/ColoShop/plugins/easing/easing.js"></script>
    <script src="~/ColoShop/js/custom.js"></script>

    @Scripts.Render("~/bundles/jquery")
    

    @RenderSection("scripts", required: false)

    </body>
</html>
