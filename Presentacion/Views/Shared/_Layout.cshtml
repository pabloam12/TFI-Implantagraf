<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link rel="stylesheet" type="text/css" href="~/ColoShop/styles/bootstrap4/bootstrap.min.css">
    <link href="~/ColoShop/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/ColoShop/styles/responsive.css">

    @Styles.Render("~/bundles/css")

</head>



<body>
    <div class="super_container">
        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            @if ((String)Session["PerfilUsuario"] == null)
                            {
                                if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                {<div class="top_nav_left">BIENVENIDO A NUESTRO SITIO!</div>}
                                else
                                { <div class="top_nav_left">WELCOME TO OUR SITE!</div>}
                            }

                            else
                            {
                                if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                {<div class="top_nav_left">HOLA @Session["NombreUsuario"]!</div>}
                                else
                                {<div class="top_nav_left">HI @Session["NombreUsuario"]!</div>}

                            }
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">

                                    @if ((String)Session["PerfilUsuario"] == null)
                                    {
                                        <li class="language">
                                            @if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                            {
                                                <a href="#">
                                                    IDIOMA
                                                    <i class="fa fa-flag"></i>
                                                    <i class="fa fa-angle-down"></i>
                                                </a>}
                                            else
                                            {
                                                <a href="#">
                                                    LANGUAGE
                                                    <i class="fa fa-flag"></i>
                                                    <i class="fa fa-angle-down"></i>
                                                </a>}
                                            <ul class="language_selection">
                                                <li>@Html.ActionLink("ESPAÑOL", "TraducirIdioma", "Idioma", new { idioma = "Esp" }, null)</li>
                                                <li>@Html.ActionLink("ENGLISH", "TraducirIdioma", "Idioma", new { idioma = "Eng" }, null)</li>
                                                @* <li>@Html.ActionLink("Portugues", "TraducirIdioma", "Idioma", new { idioma = "Bra" }, null)</li>*@
                                            </ul>
                                        </li>}
                                    <li class="account">
                                        @if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                        {
                                            <a href="#">
                                                CUENTA DE USUARIO

                                                <i class="fa fa-user"></i>

                                                <i class="fa fa-angle-down"></i>
                                            </a>}
                                        else
                                        {<a href="#">
                                            USER ACCOUNT

                                            <i class="fa fa-user"></i>

                                            <i class="fa fa-angle-down"></i>
                                        </a> }
                                        <ul class="account_selection">

                                            @if (Session["PerfilUsuario"] == null)

                                            {
                                                if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                                {
                                                    <li> @Html.ActionLink("INICIAR SESIÓN", "Index", "Login") </li>

                                                    <li> @Html.ActionLink("REGISTRARME", "Index", "RegistroCliente") </li>}
                                                else
                                                {
                                                    <li> @Html.ActionLink("LOGIN", "Index", "Login") </li>

                                                    <li> @Html.ActionLink("REGISTER", "Index", "RegistroCliente") </li>}
                                            }
                                            else
                                            {
                                                if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                                {

                                                    <li> @Html.ActionLink("MI CUENTA", "DetalleCuenta", "Cuenta")</li>

                                                    if ((String)Session["PerfilUsuario"] == "Cliente" || (String)Session["PerfilUsuario"] == "Administrativo")
                                                    {
                                                        <li> @Html.ActionLink("MIS OPERACIONES", "Index", "MisCompras") </li>}

                                                    <li> @Html.ActionLink("CERRAR SESIÓN", "Index", "Logout") </li>
                                                }
                                                else
                                                {

                                                    <li> @Html.ActionLink("MY ACCOUNT", "DetalleCuenta", "Cuenta")</li>

                                                    if ((String)Session["PerfilUsuario"] == "Cliente" || (String)Session["PerfilUsuario"] == "Administrativo")
                                                    {
                                                        <li> @Html.ActionLink("MY OPERATIONS", "Index", "MisCompras") </li>}

                                                    <li> @Html.ActionLink("LOGOUT", "Index", "Logout") </li>
                                                }
                                            }

                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a href="~/Home/Index">IMPLANTAGRAF<span>@*graf*@</span></a>
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">

                                    @if ((String)Session["IdiomaApp"] == "Esp" || (String)Session["IdiomaApp"] == null)
                                    {

                                        if ((String)Session["PerfilUsuario"] == null || (String)Session["PerfilUsuario"] == "Cliente")
                                        {
                                            <li>@Html.ActionLink("PÁGINA PRINCIPAL", "Index", "Home")</li>
                                            <li>@Html.ActionLink("CATÁLOGO", "Catalogo", "Producto")</li>
                                            <li>@Html.ActionLink("CONTACTO", "Contacto", "Home")</li>
                                            <li>@Html.ActionLink("QUIENES SOMOS", "Informacion", "Home")</li>
                                        }
                                        if ((String)Session["PerfilUsuario"] == "Administrativo")
                                        {
                                            <li>@Html.ActionLink("VENTAS", "Index", "Home")</li>
                                            <li>@Html.ActionLink("STOCK", "Index", "Home")</li>
                                            <li>@Html.ActionLink("CLIENTES", "Index", "Cliente")</li>


                                        }

                                        if ((String)Session["PerfilUsuario"] == "WebMaster")
                                        {
                                            <li>@Html.ActionLink("CONSULTAR BITÁCORA", "Index", "Bitacora")</li>
                                            <li>@Html.ActionLink("USUARIOS", "ListarUsuarios", "Cuenta")</li>
                                            <li>@Html.ActionLink("RALIZAR RESPALDO DATOS", "RealizarBackUp", "Rescate")</li>
                                            <li>@Html.ActionLink("REALIZAR RESTORE", "ListarRespaldos", "Rescate")</li>
                                        }
                                    }
                                    else
                                    {
                                        if ((String)Session["PerfilUsuario"] == null || (String)Session["PerfilUsuario"] == "Cliente")
                                        {
                                            <li>@Html.ActionLink("HOME PAGE", "Index", "Home")</li>
                                            <li>@Html.ActionLink("CATALOG", "Catalogo", "Producto")</li>
                                            <li>@Html.ActionLink("CONTACT US", "Contacto", "Home")</li>
                                            <li>@Html.ActionLink("WHO WE ARE", "Informacion", "Home")</li>
                                        }
                                        if ((String)Session["PerfilUsuario"] == "Administrativo")
                                        {
                                            <li>@Html.ActionLink("SALES", "Index", "Home")</li>
                                            <li>@Html.ActionLink("STOCK", "Index", "Home")</li>
                                            <li>@Html.ActionLink("CUSTOMERS", "Index", "Cliente")</li>


                                        }

                                        if ((String)Session["PerfilUsuario"] == "WebMaster")
                                        {
                                            <li>@Html.ActionLink("SYSTEM LOG", "Index", "Bitacora")</li>
                                            <li>@Html.ActionLink("USERS", "ListarUsuarios", "Cuenta")</li>
                                            <li>@Html.ActionLink("DO BACKUP", "RealizarBackUp", "Rescate")</li>
                                            <li>@Html.ActionLink("DO RESTORE", "ListarRespaldos", "Rescate")</li>
                                        }
                                    }

                                </ul>



                                @if (Session["Carrito"] == null)
                                { Session["ItemsCarrito"] = 0; }

                                @if ((String)Session["PerfilUsuario"] != "WebMaster")
                                {
                                    <ul class="navbar_user">
                                        <li class="checkout">
                                            <a href="~/Producto/MostrarCarrito">
                                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                                <span id="checkout_items" class="checkout_items">@Session["ItemsCarrito"]</span>
                                            </a>
                                        </li>
                                    </ul>
                                }

                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>

        @RenderBody()
        <div class="container body-content">

            <hr />
            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                                <ul class="footer_nav">
                                    <li><div class="cr">©2018 - Pablo Mahiques - Trabajo Final de Ingeniería.</div></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </footer>
        </div>


    </div>


    <script src="~/ColoShop/js/jquery-3.2.1.min.js"></script>
    <script src="~/ColoShop/styles/bootstrap4/popper.js"></script>
    <script src="~/ColoShop/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/ColoShop/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/ColoShop/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/ColoShop/plugins/easing/easing.js"></script>
    <script src="~/ColoShop/js/custom.js"></script>

    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />



    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", false)

</body>
</html>
