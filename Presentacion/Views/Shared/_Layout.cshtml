<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="background-color: #FFFFFF">
       
    <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">

                    <img src="~/Imagenes/Implantagraf - SoloLogo.png" width="25" height="25" class="d-inline-block align-top" alt="">
                    @*<img src="~/Imagenes/Implantagraf - SoloLogo.png" width="30" height="30" class="d-inline-block align-top" alt="">*@
                    Implantagraf
                    @*@Html.ActionLink("Implantagraf", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                </a>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if ((String)Session["PerfilUsuario"] == null || (String)Session["PerfilUsuario"] == "Cliente")
                    {
                        @*<li>@Html.ActionLink("Quienes Somos", "Informacion", "Home")</li>*@
                        <li>@Html.ActionLink("Quienes Somos", "Index", "Excepciones")</li>
                        <li>@Html.ActionLink("Contacto", "Contacto", "Home")</li>
                    }

                    @if ((String)Session["PerfilUsuario"] == "WebMaster")
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Seguridad<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Consultar Bitacora", "Index", "Bitacora")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administrar<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Idiomas de Usuario", "Index", "Idioma")</li>
                                <li>@Html.ActionLink("Perfiles de Usuario", "Index", "PerfilUsr")</li>
                            </ul>
                        </li>
                    }

                    @if ((String)Session["PerfilUsuario"] == "WebMaster" || (String)Session["PerfilUsuario"] == "Administrativo")
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Objetos de Negocio<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Categorias", "Index", "Categoria")</li>
                                <li>@Html.ActionLink("Localidades", "Index", "Localidad")</li>
                                <li>@Html.ActionLink("Marcas", "Index", "Marca")</li>
                            </ul>
                        </li>
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    <div class="container body-content">
                @RenderBody()
        <hr />
        <footer>
            <p>&copy; Implantagraf - Pablo Mahiques - @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
